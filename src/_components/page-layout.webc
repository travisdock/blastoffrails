<!doctype html>
<html lang="en" webc:root>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title @text="title + ' - Blastoff Rails'"></title>
    <link rel="icon" href="/images/favicons/favicon.ico" sizes="32x32" webc:keep>
    <link rel="icon" href="/images/favicons/favicon.svg" type="image/svg+xml" webc:keep>
    <link rel="apple-touch-icon" href="/images/favicons/apple-touch-icon.png" webc:keep>
    <link rel="manifest" href="/images/favicons/site.webmanifest" webc:keep>
    <link rel="stylesheet" href="/css/style.css" webc:keep>
</head>
<body>
    <header class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">Blastoff Rails</a>
            <nav class="nav-menu">
                <a href="/schedule/" class="nav-link">Schedule</a>
                <a href="/speakers/" class="nav-link">Speakers</a>
                <a href="/tickets/" class="nav-link">Tickets</a>
                <a href="/travel/" class="nav-link">Travel</a>
                <a href="/sponsor/" class="nav-link">Sponsor</a>
            </nav>
            <button class="nav-toggle" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </header>

    <main class="container">
        <div class="coming-soon">
            <h1 @text="title"></h1>
            <p class="tagline">Coming Soon</p>
        </div>
    </main>

    <script webc:keep>
        const navToggle = document.querySelector('.nav-toggle');
        const navMenu = document.querySelector('.nav-menu');

        navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navToggle.classList.toggle('active');
        });
    </script>
</body>
</html>
